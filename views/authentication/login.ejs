<%- include("../partials/header") -%>
<h1>
	Login
</h1>

<!-- Oauth authentication methoods -->
<a class="google-btn" href="/login/google">Login with Google</a>
<a class="google-btn" href="/login/facebook">Login with Facebook</a>
<a class="google-btn" href="/login/github">Login with Github</a>

<!-- Local authentication methoods -->
<form action="/login" method="POST">
	<label for="username">Username</label>
	<input type="text" id="username" name="username">
	
	<label for="passwordfeild">Password</label>
	<input type="password" id="passwordfeild" name="password">
	
	<button type="submit">
		Login
	</button>
</form>

